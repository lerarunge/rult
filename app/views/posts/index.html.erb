      <% @posts.each do |post|%> 
          <div class="card card-block row">
            <div class="col-xs-3">
             <%= render "photo", post: post %>
            </div>
            <div class="col-xs-9">
              <h4 class="card-title"><%= post.title %></h4> 
              <p class="post_description"><%= post.description %></p>
              <div style="float: right;"><%= link_to "Read more", post_path(post), class: "card-link, author_links" %></div>
            <div style="margin-top: 50px">    
              <%= render "contacts", post: post %>
            </div>

            <%= render "actions", post: post %>
            </div>
          </div>
      <% end %> 