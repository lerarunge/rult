 <div class="post">
      <% @posts.each do |post|%> 
          <div class="post-info">
            <h2><%= post.title %></h2> 
            <p><%= post.description %></p>
            <p><%= post.phone %></p>
            <p><%= post.email %></p>
            <p><%= post.address %></p>
            <p><%= link_to "See info", post_path(post) %></p>
            <% if post.user == current_user %>
              <p><%= link_to "Edit", edit_post_path(post) %></p>
              <p><%= link_to "Delete adv", post_path(post), method: :delete %></p>
            <%end%>
            <%= debug post.user %>
          </div>
      <% end %> 
      <%= debug current_user %>
 </div>